{
  "suggest.noselect": false,
  "coc.preferences.formatOnType": true,
  "coc.preferences.rootPatterns": [".git", ".vscode"],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "markdown",
    "javascript",
    "javascript.jsx",
    "javascriptreact",
    "json",
    "graphql",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "go"
  ],
  "tsserver.formatOnType": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": { "usePlaceholders": true }
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  }
}
